import Foundation

let name = "Johnathon"


if name.characters.count > 10 {
    print("long name")
} else if name.characters.count > 5 {
    print("medium name")
} else {
    print("short name")
}

// typical switch
switch name.characters.count {
case 10:
    print("10 char name")
case 9:
    print("9 char name")
default:
    print("some length")
    
}

// swift improvement to switch
// where each case is a range

switch name.characters.count {
case 6...10:
    // names between 6 and 10 chars inclusive
    print("long name")
case 3..<10:
    // names greater than equal to 3 and less than 6
    print("medium name")
default:
    print("short length")
    
}

// while loop
var number = 0
while number < 10 {
    // click on the right gutter the circle to embed and then
    // inside here, click and look at latest value, value history and graph
    number++
}

// for loop
for (var number2 = 0; number2 < 10; number2++) {
    number2
}


// for loop with range
for number3 in 0..<10 {
    number3
}




